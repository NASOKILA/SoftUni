<section id="viewMe">
    <div class="content">

        <div class="chirper">

            <h2 class="titlebar">{{username}}</h2>

            {{> submitChirpForm}}

            <div id="myStats" class="user-details">
                <span>{{chirpsCount}} chirps</span> |
                <span>{{followingUsers}} following</span> |
                <span>{{followers}} followers</span>
            </div>
        </div>
        <div id="myChirps" class="chirps">
            <h2 class="titlebar">Chirps</h2>
            {{#if hasChirps}}
                {{#each chirps}}
                    {{> meChirp}}
                {{/each}}
            {{else}}
                <div class="chirp">
                    <span class="loading">No chirps in database</span>
                </div>
            {{/if}}
        </div>

    </div>
</section>

{{> footer}}