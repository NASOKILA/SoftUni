

{{> header}}

<div id="container">

    {{> navigation}}

    <section id="viewEdit">
        <div class="submitArea">
            <h1>Submit Link</h1>
            <p>Please, fill out the form. A thumbnail image is not required.</p>
        </div>
        <div class="submitArea formContainer">
            <form method ="POST" action="#/create/post" id="submitPostForm" class="submitForm">
                <label>Link URL:</label>
                <input name="url" type="text">
                <label>Link Title:</label>
                <input name="title" type="text">
                <label>Link Thumbnail Image (optional):</label>
                <input name="image" type="text">
                <label>Description (optional):</label>
                <textarea name="description"></textarea>
                <input id="btnEditPost" type="submit" value="Submit Post">
            </form>
        </div>
    </section>
</div>

{{> footer}}