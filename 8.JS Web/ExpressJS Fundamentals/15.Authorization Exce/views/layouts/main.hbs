<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>RentACar</title>
    <link rel="stylesheet" type="text/css" href="../../public/css/style.css" />
    <link rel="icon" href="../../public/favicon.ico" />
</head>
</body class="preload">
    <header>
        <nav>
            <img id="logo" src="../../public/logo.png" alt="logo"/>
            <ul id="main-nav">
                <li><a href="/">home</a></li>
                <li><a href="/cars/all">all cars</a></li>
                <li><a href="/cars/add">add car</a></li>
                <li><a href="/users/me">profile</a></li>
            </ul>
            
            {{#if userIsLoggedIn}}
            <ul id="user">
                <li><a href="/users/logout">Logout</a></li>
            </ul>
            {{else}}
            <ul id="user">
                <li><a href="/users/register">register</a></li>
                <li><a href="/login">login</a></li>
            </ul>
            {{/if}}
        </nav>
    </header>
    <section id="main-container">
        <main>
          
            {{{body}}}

        </main>
    </section>
    <footer>
        <span>Authentication exercise</span>
    </footer>
    <script>
        document.onload = function() {
            document
                .querySelector('body')
                .classList
                .remove('preload');
        }
    </script>
</body>
</html>