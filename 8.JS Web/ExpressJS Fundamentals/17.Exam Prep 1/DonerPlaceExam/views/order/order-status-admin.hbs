<main>
	<h1>Manage orders</h1>
	<div class="orders">
		<form action="/status" method="post">

			{{#each orders}}

			<div class="order">
				<span class="order-time">{{date}}</span>
				<span class="order-name">{{product.category}} doner, {{product.size}} cm</span>
				<span class="order-status">
					<select name="{{id}}" selected="pending">
						<option selected="selected {{status}}">{{status}}</option>
						<option value="Pending">Pending</option>
						<option value="In Progress">In Progress</option>
						<option value="In Transit">In Transit</option>
						<option value="Delivered">Delivered</option>
					</select>
				</span>
				<a href="/order/details/{{id}}" class="button order-button">Details</a>
			</div>

			{{else}}
                No Orders in the database.
			{{/each}}

			<input type="submit" value="Save Changes" class="button" style="border:0">
		</form>
	</div>
</main>