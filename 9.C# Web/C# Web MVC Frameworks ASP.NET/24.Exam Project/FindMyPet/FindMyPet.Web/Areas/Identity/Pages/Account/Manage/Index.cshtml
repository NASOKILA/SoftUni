@page
@model IndexModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Profile";
}

<div class="right">

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.FullName"><fa class="fas fa-user"></fa> Full name <span class="requiredStar"> *</span></label>
                <input asp-for="Input.FullName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Input.Email"><fa class="fas fa-envelope"></fa> Email <span class="requiredStar"> *</span></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input disabled asp-for="Input.Email" class="form-control" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input disabled asp-for="Input.Email" class="form-control" />
                }
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.DateOfBirth"><i class="fas fa-calendar-alt"></i> Date of birth <span class="requiredStar"> *</span></label>
                <input asp-for="Input.DateOfBirth" class="form-control" />
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.AvatarUpload"><i class="fas fa-image"></i> Change Avatar File (optional)</label>
                <input asp-for="Input.AvatarUpload" class="form-control-file btn btn-block btn-lg" aria-describedby="fileHelp" />
                <span asp-validation-for="Input.AvatarUpload" class="text-danger"></span>
                @if (ViewData["Image"] != null && ViewData["Image"] != "")
                {
                    <img width="100" height="100" src="@ViewData["Image"]" />
                    <br />
                    <br />
                }
                else
                {
                    <img width="100" height="100" src="~/images/blank-avatar.png" />
                    <br />
                    <br />
                }
            </div>
            
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"><i class="fas fa-phone"></i> Phone Number (optional)</label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</div>
