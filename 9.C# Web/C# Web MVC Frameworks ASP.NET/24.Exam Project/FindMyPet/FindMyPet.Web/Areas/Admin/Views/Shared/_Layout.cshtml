            </nav>
        }
        else
        {
            <nav class="navbar navbar-inverse navbar-fixed-top normalNav">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">FindMyPet</a>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home <i class="fas fa-home"></i></a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="About">About <i class="fas fa-map-marker-alt"></i></a></li>
                            <li><a asp-area="" asp-controller="Users" asp-action="MyProfile">My Profile <i class="fas fa-user-circle"></i></a></li>
                            <li><a asp-area="" asp-controller="PetsPages" asp-action="Create">Create Pet <i class="fas fa-paw"></i></a></li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        }
    }
    else
    {
        <nav class="navbar navbar-inverse navbar-fixed-top normalNav">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">FindMyPet</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Home <i class="fas fa-home"></i></a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="About">About <i class="fas fa-map-marker-alt"></i></a></li>
                        <li><a asp-area="" asp-controller="Users" asp-action="MyProfile">My Profile <i class="fas fa-user-circle"></i></a></li>
                        <li><a asp-area="" asp-controller="PetsPages" asp-action="Create">Create Pet <i class="fas fa-paw"></i></a></li>
