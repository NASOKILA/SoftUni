@using Microsoft.AspNetCore.Identity

@inject SignInManager<FindMyPet.Models.User> SignInManager
@inject UserManager<FindMyPet.Models.User> UserManager
@inject FindMyPet.Data.FindMyPetDbContext findMyPetDbContext 

@if (SignInManager.IsSignedIn(User))
{

    string avatar = findMyPetDbContext.Users.Find(UserManager.GetUserId(User)).AvatarUrl;

    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">


                    @if (avatar != null && avatar != "")
                    {
                        <img style="width:40px; height:40px; border-radius:100%; position:absolute; right:15px; top:5px" src="@avatar" />
                    }
                    else
                    {
                        <img style="width:40px; height:40px; border-radius:100%; position:absolute; right:15px; top:5px" src="~/images/blank-avatar.png" />
                    }

                </a>
            </li>
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @findMyPetDbContext.Users.Find(UserManager.GetUserId(User)).UserName! <i class="fa fa-cog fa-spin"></i></a>
            </li>
            <li>
                <button type="submit" class="logoutBtnAdmin btn btn-link navbar-btn navbar-link">Logout <i class="fa fa-sign-out-alt"></i></button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register">Register <i class="fa fa-registered"></i></a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login">Login <i class="fa fa-sign-in-alt"></i></a></li>
    </ul>
}