@page
@model IndexModel
@using BookLibrary.Models;
@using BookLibrary.Web.Pages.Models;
@using System.Collections.Generic;
@using System.Linq;
@{
    Layout = "_Layout";
    ViewData["Title"] = "My Library";
}

<h1>@ViewData["Title"]</h1>
<a class="btn btn-success my-2 my-sm-0" asp-page="Books/Add">Add New Book</a>
<br />
<br />
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>

            @foreach (BookIndexModel book in Model.Books)
            {
                @if (book.Status == "Borrowed")
                {
                    <tr>
                        <td><a href="/books/details/@book.Id">@book.Title</a></td>
                        <td><a href="/author/details/@book">@book.Author.Name</a></td>
                        <td class="" borrowed"">@book.Status</td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td><a asp-page="books/details" asp-route-id="@book.Id">@book.Title</a></td>
                        <td><a asp-page="author/details" asp-route-id="@book.Id">@book.Author.Name</a></td>
                        <td>@book.Status</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
