 @model BookLibrary.Models.Movie
@{
    Layout = "_Layout";
    ViewData["Title"] = "Borrow";
}

<h2>Borrow Movie "@Model.Title"</h2>
<br/>
<div class="container">

<form method="post" asp-controller="Movies" asp-action="Borrow">
    <div class="form-group row">
        <label asp-for="Name">Name</label>
        <div class="col-sm-10">
            <input required asp-for="Name" name="name" type="text" class="form-control custom-input" id="name" aria-describedby="emailHelp" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <label for-asp="Address">Address</label>
        <div class="col-sm-10">
            <input required asp-for="Address" name="address" type="text" class="form-control custom-input" id="address" aria-describedby="emailHelp" placeholder="Address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="StartDate">Start Date</label>
        <div class="col-sm-10">
            <input required asp-for="StartDate" name="startDate" type="date" class="form-control custom-input" id="startDate" aria-describedby="emailHelp" placeholder="Start Date" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="EndDate">End Date</label>
        <div class="col-sm-10">
            <input asp-for="EndDate" name="endDate" type="date" class="form-control custom-input" id="endDate" aria-describedby="emailHelp" placeholder="End Date" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>

    <input class="btn btn-success" type="submit" value="Borrow" /> | 
    <a class="btn btn-outline-success" asp-page="/Index">Cancel</a>
</form>
</div>
