<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <article>
                <header>
                    <h2>{{title}}</h2>
                </header>

                <p>
                    {{content}}
                </p>


                <!-- AKO IMA IMAGE PATH DA MI POKAJE SNIMKATA, SLAGAME Q PREDI AVTORA.
                SLAGAME IMAGEPATH KATO SOURCE SLAGAME I alt V SLUCHAI CHE Q NQMA KAKVO
                DA IZPISHE, I KOLEMINATA NA SNIMKATA-->
                {{#if imagePath}}
                    <img src="{{imagePath}}"  width="300" alt="Article Image">
                {{/if}}


                <small class="author">
                    {{author.fullName}}
                </small>




                <footer>
                    <div class="pull-right">
                        <a class="btn btn-success btn-xs" href="/article/edit/{{id}}">Edit &raquo;</a>
                        <a class="btn btn-danger btn-xs" href="/article/delete/{{id}}">Delete &raquo;</a>
                        <a class="btn btn-default btn-xs" href="/">Back &raquo;</a>
                    </div>
                </footer>
            </article>
        </div>
    </div>
</div>
